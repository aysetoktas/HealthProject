@using Entity
@model Article
@{
    ViewBag.Title = "Makaleler";
    Layout = "~/Areas/Ziyaretci/Views/Shared/_Layout.cshtml";
    List<Article> articles = Query.ArticleList();
}
    <!-- Start Page Title Area -->
    <div class="page-title-area defaultbg" style="background-image:url(/assets/img/page.png);">
        <div class="breadcrumb-overly">
            <div class="d-table">
                <div class="d-table-cell">
                    <div class="container">
                        <div class="page-title-content">
                            <h2>
                                Makaleler
                            </h2>
                            <ul>
                                <li><a href="/Ziyaretci/Home/Makaleler">Anasayfa</a></li>
                                <li> Makaleler </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Page Title Area -->
    <!-- Start Blog Area -->
    <section class="blog-area pt-100 pb-100">
        <div class="container">
            <div class="row">
                <!-- Blog Area -->
                <div class="col-lg-12">
                    <div class="row">
                        <!-- Blog Single -->
                        @foreach (var item in articles)
                        {
                            <div class="col-lg-4 col-md-6 mb-30">
                                <div class="blog-single">
                                    <!-- Blog Thumbnail -->
                                    <div class="blog-thumbnail">
                                        <a href="single.html"><img src="~/assets/img/blog/1.jpg" alt="Blog"></a>
                                        <div class="blog-category">
                                            <a href="#">@item.Category.Name</a>
                                        </div>
                                    </div>
                                    <!-- Blog Content -->
                                    <div class="blog-content">
                                        <ul class="blog-meta">
                                            <li>
                                                <a href="#"> <i class="fa fa-user-alt"></i> @item.Yazar</a>
                                            </li>
                                            <li>
                                                <a href="#"> <i class="fas fa-calendar-week"></i>@item.Tarih</a>
                                            </li>
                                        </ul>
                                        <h2><a href="/Ziyaretci/Home/Makale/@item.ID">@item.Title </a></h2>
                                        <p>@item.Description.Substring(0,5) ...</p>
                                        <div class="blog-btn">
                                            <a href="/Ziyaretci/Home/Makale/@item.ID" class="blog-btn-one">Devamını Oku <i class="fas fa-long-arrow-alt-right"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>