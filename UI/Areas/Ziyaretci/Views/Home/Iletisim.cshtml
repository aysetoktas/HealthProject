@{
    ViewBag.Title = "Iletisim";
    Layout = "~/Areas/Ziyaretci/Views/Shared/_Layout.cshtml";
}
    <!-- Start Page Title Area -->
    <div class="page-title-area defaultbg" style="background-image:url(/assets/img/page.png);">
        <div class="breadcrumb-overly">
            <div class="d-table">
                <div class="d-table-cell">
                    <div class="container">
                        <div class="page-title-content">
                            <h2>
                                İletişim
                            </h2>
                            <ul>
                                <li><a href="/Ziyaretci/Home/Anasayfa">Anasayfa</a></li>
                                <li> İletisim </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Page Title Area -->
    <!-- Start Contact Area -->
    <section class="contact-area ptb-100 mb-minus40">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-6">
                    <div class="col-md-2 col-md-12">
                        <div class="contact-box">
                            <div class="icon">
                                <i class="fa fa-phone"></i>
                            </div>
                            <div class="content">
                                <h4>Telefon</h4>
                                <p><a href="#">+1-202-555-0183</a></p>
                                <p><a href="#">+1-202-555-0145</a></p>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="col-md-2 col-md-12">
                        <div class="contact-box">
                            <div class="icon">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div class="content">
                                <h4>E-mail</h4>
                                <p><a href="#">info@youwebsite.com</a></p>
                                <p><a href="#">info@youwebsite.com</a></p>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="col-md-2 col-md-12">
                        <div class="contact-box">
                            <div class="icon">
                                <i class="fa fa-map-marker"></i>
                            </div>
                            <div class="content">
                                <h4>Adres</h4>
                                <p>383/a, katasur Mohammodpur, Dhaka, Bangladesh</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <form id="contactForm" action="#" method="post">
                        <h3>Get in Touch</h3>
                        <div class="row">
                            <div class="col-lg-6 col-md-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Name" id="name" value="">
                                    <p id="nameStatus" class="formError"></p>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-12">
                                <div class="form-group">
                                    <input type="email" class="form-control" placeholder="Email" id="email" value="">
                                    <p id="emailStatus" class="formError"></p>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Subject" id="subject" value="">
                                    <p id="subjectStatus" class="formError"></p>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12">
                                <div class="form-group">
                                    <textarea class="form-control" placeholder="Your Message" id="message"></textarea>
                                    <p id="messageStatus" class="formError"></p>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12">
                                <div class="form-group">
                                    <label for="mathcaptcha">Please solve the following math function: <span id="firstNumber"></span> + <span id="secondNumber"></span></label>
                                    <input class="form-control" id="mathcaptcha" type="text" name="mathcaptcha" required="required" />
                                    <p id="captchaStatus" class="formError"></p>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12">
                                <div class="send-btn">
                                    <button type="submit" class="send-btn-one">Send Message</button>
                                </div>
                            </div>
                            <div class="status-message"></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- Start Contact Area -->