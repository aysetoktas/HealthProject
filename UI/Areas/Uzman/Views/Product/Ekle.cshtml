@using Entity
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Areas/Uzman/Views/Shared/_UzmanLayout.cshtml";
    List<Product> products = Query.ProductList();
    List<Category> categories = Query.CategoryList();
    List<User> users = Query.UserList();
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h3 class="card-title ">PAKET EKLE</h3>
                    </div>
                    <div class="card-body">
                        <form action="/Uzman/Product/Ekle" method="post">
                            <div class="form-group">
                                <label for="Name">Adı</label>
                                <input name="Name" class="form-control" rows="3" />
                            </div>
                            <div class="form-group">
                                <label for="Price">Paket Fiyatı</label>
                                <input name="Price" class="form-control" rows="3" />
                            </div>
                            <div class="form-group">
                                <label for="Time">Kullanım Süresi(0-Tek / 1-Aylık / 2-Yıllık)</label>
                                <input name="Time" class="form-control" rows="3" />
                            </div>
                            <div class="form-group">
                                <label for="Item1">Özellik 1</label>
                                <input name="Item1" class="form-control" rows="3" />
                            </div>
                            <div class="form-group">
                                <label for="Item2">Özellik 2</label>
                                <input name="Item2" class="form-control" rows="3" />
                            </div>
                            <div class="form-group">
                                <label for="Item3">Özellik 3</label>
                                <input name="Item3" class="form-control" rows="3" />
                            </div>
                            <div class="form-group">
                                <label for="Item4">Özellik 4</label>
                                <input name="Item4" class="form-control" rows="3" />
                            </div>
                            <div class="form-group">
                                <label for="Item5">Özellik 5</label>
                                <input name="Item5" class="form-control" rows="3" />
                            </div>
                            <div class="form-group">
                                <label for="CategoryID">Kategori Seçiniz</label>
                                <select name="CategoryID" class="form-control">
                                    @foreach (var item in categories)
                                    {
                                        <option value="@item.ID">@item.Name</option>
                                    }
                                </select>
                            </div>
                            @*<div class="form-group">
                                <label for="UserID">Uzman Kişi</label>
                                <select name="UserID" class="form-control">
                                    @foreach (var item in users)
                                    {
                                        <option value="@item.ID">@item.Role - @item.FirstName @item.LastName</option>
                                    }
                                </select>
                            </div>*@
                            <input type="submit" value="Ekle" class="form-control btn btn-primary" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
