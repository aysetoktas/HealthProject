@using Entity
@{
    ViewBag.Title = "Listele";
    Layout = "~/Areas/Uzman/Views/Shared/_UzmanLayout.cshtml";
    List<Product> products = Query.ProductList();
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h3 class="card-title ">KATEGORİLER</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="display" style="width:100%" id="categoryTable">
                                <thead class=" text-primary">
                                    <tr>
                                        <th>Ad</th>
                                        <th>Açıklama</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in products)
                                    {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Price</td>
                                        <td>@item.Time</td>
                                        <td>@item.Item1</td>
                                        <td>@item.Item2</td>
                                        <td>@item.Item3</td>
                                        <td>@item.Item4</td>
                                        <td>@item.Item5</td>
                                        <td>@item.CategoryID</td>
                                        <td>@item.UserID</td>
                                        <td>
                                            <a href="/Uzman/Product/Güncelle/@item.ID">
                                                <i style="margin-left: 12px;" class="material-icons">Güncelle</i>
                                            </a>
                                            <a href="/Uzman/Product/Sil/@item.ID">
                                                <i class="material-icons">/ Sil</i>
                                            </a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

