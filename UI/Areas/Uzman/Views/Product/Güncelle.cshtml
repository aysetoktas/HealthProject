@using Entity
@model Product
@{
    ViewBag.Title = "Güncelle";
    Layout = "~/Areas/Uzman/Views/Shared/_UzmanLayout.cshtml";
    List<Product> products = Query.ProductList();
    List<Category> categories = Query.CategoryList();
    List<User> users = Query.UserList();
}


<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h3 class="card-title ">Paket Güncelle</h3>
                    </div>
                    <div class="card-body">
                        <form action="/Uzman/Product/Güncelle" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="ID">Paket ID</label>
                                <input name="ID" readonly value="@Model.ID" class="form-control disabled" />
                            </div>
                            <div class="form-group">
                                <label for="Name">Paket Adı</label>
                                <input name="Name" value="@Model.Name" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Price">Paket Fiyatı</label>
                                <input name="Price" value="@Model.Price" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Time">Kullanım Süresi (0 - 1 - 2)</label>
                                <input name="Time" value="@Model.Time" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Item1">Özellik 1</label>
                                <input name="Item1" value="@Model.Item1" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Item2">Özellik 3</label>
                                <input name="Item2" value="@Model.Item2" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Item3">Özellik 3</label>
                                <input name="Item3" value="@Model.Item3" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Item4">Özellik 4</label>
                                <input name="Item4" value="@Model.Item4" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="CategoryID">Kategori Seçiniz :</label>
                                <select name="CategoryID" class="form-control">
                                    @foreach (var item in categories)
                                    {
                                        <option @(Model.CategoryID == item.ID ? "selected=\"selected\"" : "" ) value="@item.ID">@item.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="UserID">Kişi Seçiniz</label>
                                <select name="CategoryID" class="form-control">
                                    @foreach (var item in users)
                                    {
                                        <option @(Model.UserID == item.ID ? "selected=\"selected\"" : "" ) value="@item.ID">@item.Role - @item.FirstName @item.LastName</option>
                                    }
                                </select>
                            </div>

                            <input type="submit" value="Güncelle" class="form-control btn btn-primary" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


