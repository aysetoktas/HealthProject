@using Entity
@model User
@{
    ViewBag.Title = "UzmanGüncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<User> users = Query.UserList();
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h3 class="card-title ">Uzman Güncelle</h3>
                    </div>
                    <div class="card-body">
                        <form action="/Admin/User/UzmanGüncelle" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="ID">User ID</label>
                                <input name="ID" readonly value="@Model.ID" class="form-control disabled" />
                            </div>
                            <div class="form-group">
                                <label for="UserName">Ad</label>
                                <input name="UserName" value="@Model.UserName" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="FirstName">Ad</label>
                                <input name="FirstName" value="@Model.FirstName" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="LastName">Soyad</label>
                                <input name="LastName" value="@Model.LastName" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Email">E-Mail</label>
                                <input name="Email" value="@Model.Email" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Password">Şifre</label>
                                <input name="Password" value="@Model.Password" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="PhoneNumber">Telefon</label>
                                <input name="PhoneNumber" value="@Model.PhoneNumber" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Title">Ünvan</label>
                                <input name="Title" value="@Model.Title" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Description">Hakkımda</label>
                                <input name="Description" value="@Model.Description" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Facebook">Facebook</label>
                                <input name="Facebook" value="@Model.Facebook" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Instagram">Instagram</label>
                                <input name="Instagram" value="@Model.Instagram" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Linkedin">Linkedin</label>
                                <input name="Linkedin" value="@Model.Linkedin" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Picture">Fotoğtaf</label>
                                <input name="Picture" value="@Model.Picture" class="form-control" />
                            </div>
                            <input type="submit" value="Güncelle" class="form-control btn btn-primary" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>