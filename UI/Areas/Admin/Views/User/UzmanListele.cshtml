@using Entity
@{
    ViewBag.Title = "UzmanListele";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<User> users = Query.UserList();
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h3 class="card-title ">UZMANLAR</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="display" style="width:100%" id="categoryTable">
                                <thead class=" text-primary">
                                    <tr>
                                        <th>Ad</th>
                                        <th>Soyad</th>
                                        <th>E-mail</th>
                                        <th>Şifre</th>
                                        <th>Telefon</th>
                                        <th>Fotoğraf</th>
                                        <th>Ünvan</th>
                                        <th>Hakkımda</th>
                                        <th>Facebook</th>
                                        <th>Instagram</th>
                                        <th>Linkedin</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (User user in users.Where(x => x.Role == Role.Uzman))
                                    {
                                    <tr>
                                        <td>@user.FirstName</td>
                                        <td>@user.LastName</td>
                                        <td>@user.Email</td>
                                        <td>@user.Password</td>
                                        <td>@user.PhoneNumber</td>
                                        <td>@user.Picture</td>
                                        <td>@user.Title</td>
                                        <td>@user.Description</td>
                                        <td>@user.Facebook</td>
                                        <td>@user.Instagram</td>
                                        <td>@user.Linkedin</td>
                                        <td>
                                            <a href="/Admin/User/UzmanGüncelle/@user.ID">
                                                <button type="button" class="btn btn-info">GÜNCELLE</button>
                                            </a>
                                            <a href="/Admin/User/UzmanSil/@user.ID">
                                                <button type="button" class="btn btn-danger">SİL</button>
                                            </a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
