@using Entity
@{
    ViewBag.Title = "Listele";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<Category> categories = Query.CategoryList();
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h3 class="card-title ">KATEGORİLER</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="display" style="width:100%" id="categoryTable">
                                <thead class=" text-primary">
                                    <tr>
                                        <th>Ad</th>
                                        <th>Açıklama</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in categories)
                                    {
                                        <tr>
                                            <td>@item.Name</td>
                                            <td>@item.Description</td>
                                            <td>
                                                <a href="/Admin/Category/Güncelle/@item.ID">
                                                    <i style="margin-left: 12px;" class="material-icons">Güncelle</i>
                                                </a>
                                                <a href="/Admin/Category/Sil/@item.ID">
                                                    <i class="material-icons">/ Sil</i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>