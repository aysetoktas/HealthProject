@using Entity 
@{
    ViewBag.Title = "Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<Category> categories = Query.CategoryList();
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h3 class="card-title ">Kategori Güncelle</h3>
                    </div>
                    <div class="card-body">
                        <form action="/Admin/Category/Güncelle" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="ID">Sınıf ID</label>
                                <input name="ID" readonly value="@Model.ID" class="form-control disabled" />
                            </div>
                            <div class="form-group">
                                <label for="Name">Sınıf No</label>
                                <input name="Name" value="@Model.Name" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Description">Saat</label>
                                <input name="Description" value="@Model.Description" class="form-control" />
                            </div>
                            <input type="submit" value="Güncelle" class="form-control btn btn-primary" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
