@using Entity
@model Article
@{
    ViewBag.Title = "Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<Article> articles = Query.ArticleList();
    List<Category> categories = Query.CategoryList();
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h3 class="card-title ">Makale Güncelle</h3>
                    </div>
                    <div class="card-body">
                        <form action="/Admin/Article/Güncelle" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="ID">Makale ID</label>
                                <input name="ID" readonly value="@Model.ID" class="form-control disabled" />
                            </div>
                            <div class="form-group">
                                <label for="Title">Makale Başlık</label>
                                <input name="Title" value="@Model.Title" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Description">Makale İçerik</label>
                                <input name="Description" value="@Model.Description" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Yazar">Yazar</label>
                                <input name="Yazar" value="@Model.Yazar" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Tarih">Tarih</label>
                                <input name="Tarih" value="@Model.Tarih" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Etiket">Etiket</label>
                                <input name="Etiket" value="@Model.Etiket" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Kaynakca">Kaynakça</label>
                                <input name="Kaynakca" value="@Model.Kaynakca" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="CategoryID">Kategori Seçiniz :</label>
                                <select name="CategoryID" class="form-control">
                                    @foreach (var item in categories)
                                    {
                                        <option @(Model.CategoryID == item.ID ? "selected=\"selected\"" : "" ) value="@item.ID">@item.Name</option>
                                    }
                                </select>
                            </div>
                            <input type="submit" value="Güncelle" class="form-control btn btn-primary" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>