@using Entity
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<Article> articles = Query.ArticleList();
    List<Category> categories = Query.CategoryList();
}


<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h3 class="card-title ">MAKALE EKLE</h3>
                    </div>
                    <div class="card-body">
                        <form action="/Admin/Article/Ekle" method="post">
                            <div class="form-group">
                                <label for="Title">Başlık</label>
                                <input name="Title" class="form-control" rows="3" />
                            </div>
                            <div class="form-group">
                                <label for="Description">İçerik</label>
                                <input name="Description" class="form-control" rows="3" />
                            </div>
                            <div class="form-group">
                                <label for="Yazar">Yazar</label>
                                <input name="Yazar" class="form-control" rows="3" />
                            </div>
                            <div class="form-group">
                                <label for="Tarih">Tarih</label>
                                <input name="Tarih" class="form-control" rows="3" />
                            </div>
                            <div class="form-group">
                                <label for="Etiket">Etiket</label>
                                <input name="Etiket" class="form-control" rows="3" />
                            </div>
                            <div class="form-group">
                                <label for="Kaynakca">Kaynakça</label>
                                <input name="Kaynakca" class="form-control" rows="3" />
                            </div>
                            <div class="form-group">
                                <label for="CategoryID">Kategori Seçiniz</label>
                                <select name="CategoryID" class="form-control">
                                    @foreach (var item in categories)
                                    {
                                        <option value="@item.ID">@item.Name</option>
                                    }
                                </select>
                            </div>
                            <input type="submit" value="Ekle" class="form-control btn btn-primary" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

